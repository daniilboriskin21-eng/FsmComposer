<Window x:Class="FsmComposer.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FSM Composer &amp; Debugger" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="10" Grid.Column="0">
            <TextBlock Text="Тип FSM:" FontWeight="Bold"/>
            <ComboBox x:Name="FsmTypeCombo">
                <ComboBoxItem Content="DFA" IsSelected="True"/>
                <ComboBoxItem Content="NFA"/>
            </ComboBox>

            <TextBlock Text="Входная строка:" Margin="0,20,0,5"/>
            <TextBox x:Name="InputText" Text="101"/>

            <Button Content="Создать FSM" Click="CreateFsm_Click" Margin="0,10"/>
            <Button Content="Шаг" Click="Step_Click" Margin="0,5"/>
            <Button Content="Отмена" Click="Undo_Click" Margin="0,5"/>

            <TextBlock x:Name="StatusText" Margin="0,20" Text="Готов"/>
        </StackPanel>

        <Canvas x:Name="FsmCanvas" Grid.Column="1" Background="#f0f0f0" Margin="10"/>
    </Grid>
</Window>